
@using Models

<div class="modal @ModalClass" tabindex="-1" role="dialog" style="display:@ModalDisplay">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="justify-content-center mt-5">
                        <div class="row mt-3">
                            <div class="col-12">
                                <p>Mã Khách Hàng</p>
                                <input class="form-control" @bind-value="cbKH.CUSTOMER_ID" />
                            </div>
                            <div class="col-4">
                                <p>Họ và Tên Khách Hàng </p>
                                <input class="form-control" @bind-value="cbKH.CUSTOMER_NAME" />
                            </div>
                            <div class="col-4">
                                <p>Số Điện Thoại</p>
                                <input class="form-control" @bind-value="cbKH.PHONE" />
                            </div>
                            <div class="col-4">
                                <p>Email</p>
                                <input class="form-control" @bind-value="cbKH.EMAIL" />
                            </div>
                            <div class="col-8">
                                <p style="margin-top: 10px">Mô Tả Ngắn</p>
                                <textarea class="form-control" @bind="cbKH.SHORT_DESCRIPTION" rows="3"></textarea>
                            </div>
                            <div class="col-4">
                                <p style="margin-top: 10px">Trạng Thái Trao Giải</p>
                                <input class="form-control" @bind-value="cbKH.REWARD_STATUS" />
                            </div>
                            <div class="col-3 mt-2">
                                <p>Người Trao Giải</p>
                                <input class="form-control" @bind-value="cbKH.REWARD_PROVIDER" />
                            </div>
                            <div class="col-3 mt-2">
                                <p>Ngày Trúng Giải</p>
                                <input class="form-control" @bind-value="cbKH.WINNING_DATE" />
                            </div>
                            <div class="col-3 mt-2">
                                <p>Ngày Xử Lý</p>
                                <input class="form-control" @bind-value="cbKH.PROCESS_DATE" />
                            </div>
                        </div>
                    </div>
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" @onclick="() => Close()">Close</button>
            </div>
        </div>
    </div>
</div>



@if (ShowBackdrop)
{
    <div class="modal-backdrop fade show"></div>
}


@code {
    private DSKhachHang cbKH = new DSKhachHang();

    public Guid Guid = Guid.NewGuid();
    public string ModalDisplay = "none;";
    public string ModalClass = "";
    public bool ShowBackdrop = false;

    public void Open(DSKhachHang data)
    {
        ModalDisplay = "block;";
        ModalClass = "Show";
        ShowBackdrop = true;
        StateHasChanged();
        cbKH = data;
    }

    public void Close()
    {
        ModalDisplay = "none";
        ModalClass = "";
        ShowBackdrop = false;
        StateHasChanged();
    }
}